<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="goToPublicMemoryActivity"
        android:src="@mipmap/home_unfilled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/planet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="goToMapActivity"
        android:src="@mipmap/planet_unfilled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="goToCreateMemoryActivity"
        android:src="@mipmap/plus_unfilled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/bell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="goToNotification"
        android:src="@mipmap/bell_unfilled"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:onClick="goToUser"
        android:src="@mipmap/person_unfilled"
        tools:ignore="ContentDescription" />

</LinearLayout>