<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.melody.MemoryDetailActivity">


    <ImageView
        android:id="@+id/memoryAuthorPic"
        android:layout_width="106dp"
        android:layout_height="108dp"
        android:layout_marginStart="56dp"
        android:visibility="visible"
        tools:ignore="ContentDescription"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="48dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/memoryDate"
        android:layout_width="178dp"
        android:layout_height="45dp"
        android:layout_marginStart="18dp"
        android:text="@string/time"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/memoryAuthor"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/memoryAuthorPic" />

    <TextView
        android:id="@+id/memoryLocation"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:text="@string/country_city"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/memoryPicture"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/memoryAuthorPic"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="22dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/memoryAuthor"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:text="@string/username"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/memoryDate"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/memoryDate"
        app:layout_constraintTop_toTopOf="@+id/memoryAuthorPic" />

    <ImageView
        android:id="@+id/memoryPicture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="49dp"
        android:layout_marginStart="49dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/memoryVideo"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/memoryVideo" />

    <include
        layout="@layout/menu_layout"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/memoryPicture"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <VideoView
        android:id="@+id/memoryVideo"
        android:layout_width="0dp"
        android:layout_height="273dp"
        android:layout_marginBottom="124dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="55dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
