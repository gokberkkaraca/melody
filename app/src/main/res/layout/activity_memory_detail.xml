<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.melody.MemoryDetailActivity">

    <include
        layout="@layout/menu_layout"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="9dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="9dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tableLayout"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <ImageView
        android:id="@+id/memoryAuthorPic"
        android:layout_width="105dp"
        android:layout_height="93dp"
        android:layout_marginStart="2dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/memoryDate"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/memoryLocation"
        app:layout_constraintTop_toTopOf="@+id/memoryDate"
        android:layout_marginLeft="2dp" />

    <TextView
        android:id="@+id/memoryDate"
        android:layout_width="194dp"
        android:layout_height="45dp"
        android:text="Date"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/memoryAuthor"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/memoryAuthorPic"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/memoryLocation"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:text="City, Country"
        android:layout_marginEnd="46dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="46dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="117dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/memoryAuthorPic"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp" />

    <TextView
        android:id="@+id/memoryComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Comments"
        app:layout_constraintRight_toLeftOf="@+id/memoryPicture"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/memoryPicture"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="53dp"
        app:layout_constraintLeft_toLeftOf="@+id/memoryPicture" />

    <TextView
        android:id="@+id/memoryAuthor"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="Author"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/memoryDate"
        android:layout_marginTop="80dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/memoryDate"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/memoryPicture"
        android:layout_width="0dp"
        android:layout_height="140dp"
        app:srcCompat="@mipmap/photo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="103dp"
        app:layout_constraintTop_toBottomOf="@+id/memoryDate"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp" />

</android.support.constraint.ConstraintLayout>
