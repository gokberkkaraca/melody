<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.melody.CreateMemoryActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/memory_description"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/hitforMemoryDescription"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:lines="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <ImageView
        android:id="@+id/display_chosen_photo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@+id/memory_description"
        app:layout_constraintRight_toRightOf="@+id/memory_description"
        app:layout_constraintTop_toBottomOf="@+id/memory_description"
        app:srcCompat="@null"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        tools:layout_constraintLeft_creator="1" />

    <VideoView
        android:id="@+id/display_chosen_video"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="@+id/memory_description"
        app:layout_constraintLeft_toLeftOf="@+id/memory_description"
        app:layout_constraintTop_toBottomOf="@+id/display_chosen_photo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:ignore="ContentDescription"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/addTags"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


    <ImageButton
        android:id="@+id/take_photos"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:onClick="pickPhotoDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/memory_description"
        app:srcCompat="@mipmap/photo"
        tools:ignore="ContentDescription"
        android:layout_marginStart="20dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/take_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="pickVideoDialog"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/take_photos"
        app:srcCompat="@mipmap/video"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintRight_toRightOf="@+id/memory_send"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/take_photos" />

    <ImageButton
        android:id="@+id/memory_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="sendMemory"
        app:layout_constraintRight_toRightOf="@+id/memory_description"
        app:layout_constraintBottom_toBottomOf="@+id/take_photos"
        app:srcCompat="@mipmap/send_memory"
        tools:ignore="ContentDescription" />

        android:onClick="pickAudioDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/memory_send"
        app:srcCompat="@mipmap/microphone"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:layout_marginTop="59dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/take_photos"
        app:layout_constraintLeft_toLeftOf="@+id/take_photos"
        app:layout_constraintRight_toLeftOf="@+id/take_videos"
        app:layout_constraintTop_toBottomOf="@+id/display_chosen_photo"
        tools:ignore="ContentDescription"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintVertical_bias="0.514"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="38dp" />

    <Spinner
        android:id="@+id/tags_dropdown"
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/testView" />

    <TextView
        android:id="@+id/addTags"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:text="Select Tags:"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/testView"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tags_dropdown"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/testView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginStart="10dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/display_chosen_video"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/addTags" />

</android.support.constraint.ConstraintLayout>
