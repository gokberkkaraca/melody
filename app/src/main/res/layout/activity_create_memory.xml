<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.epfl.sweng.melody.CreateMemoryActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/new_tag_content"
        android:layout_width="144dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="@string/sample_tag"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="4"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tags_dropdown"
        app:layout_constraintLeft_toRightOf="@+id/add_tag"/>

    <EditText
        android:id="@+id/memory_description"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hitforMemoryDescription"
        android:inputType="textMultiLine"
        android:maxLines="4"
        android:lines="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <TextView
        android:id="@+id/address"
        android:layout_width="140dp"
        android:layout_height="22dp"
        android:text=""
        tools:ignore="ContentDescription,MissingConstraints"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />


    <ImageButton
        android:id="@+id/take_photos"
        android:layout_width="69dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:background="@null"
        android:onClick="pickPhotoDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/memory_description"
        app:srcCompat="@mipmap/photo"
        tools:ignore="ContentDescription"
        android:layout_marginStart="20dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageButton
        android:id="@+id/take_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="pickVideoDialog"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/take_photos"
        app:srcCompat="@mipmap/video"
        tools:ignore="ContentDescription"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="173dp"
        android:layout_marginEnd="174dp"
        app:layout_constraintRight_toRightOf="@+id/memory_send"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/take_photos" />

    <ImageButton
        android:id="@+id/memory_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:onClick="sendMemory"
        app:layout_constraintRight_toRightOf="@+id/memory_description"
        app:layout_constraintBottom_toBottomOf="@+id/take_photos"
        app:srcCompat="@mipmap/send_memory"
        tools:ignore="ContentDescription" />

    <Spinner
        android:id="@+id/tags_dropdown"
        android:layout_width="182dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintLeft_toRightOf="@+id/select_tags"
        android:layout_marginStart="43dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.39" />

    <TextView
        android:id="@+id/select_tags"
        android:layout_width="115dp"
        android:layout_height="32dp"
        android:text="@string/select_tag"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/address"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/add_tag"
        android:layout_width="81dp"
        android:layout_height="34dp"
        android:layout_marginStart="40dp"
        android:paddingBottom="2dp"
        android:text="@string/add_tag"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/select_tags"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/submit_tag"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:text="@string/submit"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tags_dropdown"
        app:layout_constraintLeft_toRightOf="@+id/new_tag_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.529" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="397dp"
        android:layout_height="263dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/memory_description"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/constraintLayout">

        <VideoView
            android:id="@+id/display_chosen_video"
            android:layout_width="296dp"
            android:layout_height="241dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="ContentDescription"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintHorizontal_bias="0.494"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/display_chosen_photo"
            android:layout_width="308dp"
            android:layout_height="235dp"
            android:scaleType="fitXY"
            app:srcCompat="@null"
            tools:ignore="ContentDescription,MissingConstraints"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            tools:layout_editor_absoluteX="60dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
