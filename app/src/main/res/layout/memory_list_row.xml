<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/authorPic"
        android:layout_alignEnd="@+id/authorPic" />
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_above="@+id/location"
        android:layout_toRightOf="@+id/authorPic"
        android:layout_toEndOf="@+id/authorPic"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp" />
    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_alignBottom="@+id/authorPic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_toLeftOf="@+id/location"
        android:layout_toStartOf="@+id/location"
        android:layout_marginRight="41dp"
        android:layout_marginEnd="41dp" />
    <ImageView
        android:id="@+id/authorPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/person_filled"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>