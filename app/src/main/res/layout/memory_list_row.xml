<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/authorPic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/author"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/author"
        android:layout_marginTop="10dp"
        android:src="@mipmap/person_filled"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/author"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/authorPic"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:text="@string/author"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/authorPic"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/authorPic"
        android:layout_toRightOf="@+id/authorPic"
        android:text="@string/location"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/location"
        android:layout_alignBottom="@+id/location"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/location"
        android:layout_toRightOf="@+id/location"
        android:text="@string/time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/author"
        android:layout_toEndOf="@+id/location"
        android:layout_toRightOf="@+id/location"
        android:text="@string/description"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/memoryPic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/time"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="100dp"
        tools:ignore="ContentDescription" />


</RelativeLayout>