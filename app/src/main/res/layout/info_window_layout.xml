<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_window_layout"
    android:layout_width="200dp"
    android:layout_height="230dp">

    <ImageView
        android:id="@+id/userPhoto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/userPhoto"
        app:layout_constraintTop_toTopOf="@+id/userPhoto" />

    <TextView
        android:id="@+id/uploadTime"
        android:layout_width="100dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/userName"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <TextView
        android:id="@+id/memoryText"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:maxWidth="180dp"
        app:layout_constraintLeft_toLeftOf="@+id/userPhoto"
        app:layout_constraintTop_toBottomOf="@+id/userPhoto" />

    <ImageView
        android:id="@+id/memoryImage"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/userPhoto"
        app:layout_constraintTop_toBottomOf="@+id/memoryText"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>